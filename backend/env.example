ENV=dev
BACKEND_CORS_ORIGINS=http://localhost:3000,https://portik.in,https://www.portik.in

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
# Example: postgresql://admin:password@localhost:5432/portikdb
POSTGRESQL_URL=

# Database path (deprecated - kept for backward compatibility)
# For Render persistent disk, set to: /data/trading_data.duckdb
DUCKDB_PATH=

# Optional for local dev: if omitted, backend generates an ephemeral key at startup (tokens invalid after restart).
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Required for persistent broker connections (encrypts tokens at rest).
# Generate:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
BROKER_TOKEN_ENCRYPTION_KEY=

# Email configuration for notifications (optional - notifications won't work without this)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=portik
SMTP_USE_TLS=true


